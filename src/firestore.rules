rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner() {
      // Check if the requesting user has the 'owner' role in their own user document.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['owner']);
    }

    match /users/{userId} {
      // 1. A user can read their own document.
      // 2. An owner can read any user document (needed for email lookup).
      allow read: if request.auth != null && (request.auth.uid == userId || isOwner());
      // An owner can create a user.
      allow create: if request.auth != null && isOwner();
      // An owner can update another user's roles (e.g., to add 'tenant').
      allow update: if request.auth != null && isOwner() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['roles', 'updatedAt', 'phone']);
      // An owner can delete a user (part of deleting a tenant).
      allow delete: if request.auth != null && isOwner();
    }

    match /properties/{document=**} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && isOwner();
    }

    match /tenants/{document=**} {
       allow read: if request.auth != null;
       allow write: if request.auth != null && isOwner();
    }

    match /invoices/{document=**} {
      // Allow any authenticated user to read the invoices list. Client-side filters what is shown.
      allow read: if request.auth != null;
      // Allow owners to write, or tenants to update their own invoices (e.g., submitting payment)
      allow write: if request.auth != null && (isOwner() || request.auth.uid == resource.data.userId);
    }
  }
}
