rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own user document to get their roles.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Only owners can create/update user roles.
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['owner']);
    }

    // Authenticated users can read all properties.
    match /properties/{document=**} {
        allow read: if request.auth != null;
    }
    match /properties/{propertyId} {
        // Only owners can write to properties.
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['owner']);
    }

    // Authenticated users can read all tenancy records.
    match /tenants/{document=**} {
       allow read: if request.auth != null;
    }
    match /tenants/{tenantId} {
       // Only owners can write to tenancy records.
       allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['owner']);
    }

    // Authenticated users can read all invoices.
    match /invoices/{document=**} {
       allow read: if request.auth != null;
    }

    // Invoice write rules remain specific.
    match /invoices/{invoiceId} {
      // An owner can write to any invoice.
      // A tenant can only write to their own invoice (for submitting payments).
      allow write: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny(['owner']) || (request.resource.data.userId == request.auth.uid && resource.data.userId == request.auth.uid));
    }
  }
}
