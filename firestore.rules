rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own user document to get their role.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Admins can create/update user roles. Tenants cannot.
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Tenants need to read properties to see their property name.
    // Admins need to read all properties.
    match /properties/{propertyId} {
        allow read: if request.auth != null;
        // Only admins can create, update, or delete properties.
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Admins need to read all tenants.
    // A tenant might need to read their own data (though this is less common on lists).
    match /tenants/{tenantId} {
        allow read: if request.auth != null;
         // Only admins can create, update, or delete tenants.
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
